{
  "name": "bulletproof-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "dev": "vite",
    "build": "tsc -p tsconfig.prod.json && vite build",
    "lint": "eslint --fix --ext .js,.ts,.tsx ./src --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o ./build/storybook"
  },
  "dependencies": {
    "@mswjs/data": "^0.11.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "axios": "^1.2.2",
    "clsx": "^1.2.1",
    "msw": "^0.49.2",
    "msw-storybook-addon": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.2",
    "react-router-dom": "^6.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@faker-js/faker": "^7.6.0",
    "@storybook/addon-essentials": "^7.0.0-beta.24",
    "@storybook/addon-interactions": "^7.0.0-beta.24",
    "@storybook/addon-links": "^7.0.0-beta.24",
    "@storybook/blocks": "^7.0.0-beta.24",
    "@storybook/react": "^7.0.0-beta.24",
    "@storybook/react-vite": "^7.0.0-beta.24",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/dom": "^8.19.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-istanbul": "^0.27.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.10",
    "husky": "^8.0.3",
    "i": "^0.3.7",
    "jsdom": "^21.0.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.2",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.0-beta.24",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.27.1"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "pnpm lint"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
